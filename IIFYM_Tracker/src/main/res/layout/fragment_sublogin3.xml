<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kareem.IIFYM_Tracker.Activities.Old_Login.Goalsfrag_Abdu">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollview3">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/clayout3"
            android:layout_height="520dp">

            <Button
                android:text="Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backbtn"
                app:layout_constraintRight_toLeftOf="@+id/finishregBtn"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="64dp"
                app:layout_constraintLeft_toLeftOf="@+id/workout_freq_spinner"
                app:layout_constraintHorizontal_bias="0.54"
                android:layout_marginStart="16dp" />

            <TextView
                android:layout_width="368dp"
                android:layout_height="64dp"
                android:text="@string/frag3text"
                android:textSize="30sp"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:id="@+id/title_login3"
                app:layout_constraintBottom_toTopOf="@+id/goalSpinner"
                android:layout_marginBottom="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/goalSpinner" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:id="@+id/workout_freq_spinner"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintBottom_creator="1"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="128dp"
                tools:layout_constraintLeft_creator="1"
                android:layout_marginBottom="128dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView6" />

            <Button
                android:text="Finish"
                android:layout_height="wrap_content"
                android:id="@+id/finishregBtn"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintBottom_creator="1"
                android:layout_marginStart="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.88"
                android:layout_marginBottom="64dp"
                android:layout_width="255dp"
                android:textAlignment="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/carbsfield"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toTopOf="@+id/proteinfield"
                tools:layout_constraintLeft_creator="1"
                android:layout_marginBottom="7dp"
                app:layout_constraintLeft_toLeftOf="@+id/proteinfield"
                android:hint="00%" />

            <TextView
                android:text="Workout Frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_constraintLeft_creator="1"
                android:layout_marginBottom="192dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="8dp" />

            <TextView
                android:text="% Fat"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textAlignment="textEnd"
                android:layout_width="0dp"
                app:layout_constraintRight_toLeftOf="@+id/fatfield"
                tools:layout_constraintRight_creator="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="11dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/fatfield"
                tools:layout_constraintBaseline_creator="1"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/fatfield"
                android:hint="00%"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toTopOf="@+id/textView8"
                tools:layout_constraintLeft_creator="1"
                android:layout_marginBottom="11dp"
                app:layout_constraintLeft_toLeftOf="@+id/proteinfield" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/proteinfield"
                android:hint="00%"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toTopOf="@+id/fatfield"
                android:layout_marginStart="9dp"
                tools:layout_constraintLeft_creator="1"
                android:layout_marginBottom="12dp"
                app:layout_constraintLeft_toRightOf="@+id/textView6" />

            <TextView
                android:text="% Protein"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textAlignment="textEnd"
                android:layout_width="0dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/proteinfield"
                tools:layout_constraintBaseline_creator="1"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:text="% Carbs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textAlignment="textEnd"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintRight_toRightOf="@+id/textView7"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/textView6"
                app:layout_constraintHorizontal_bias="0.0"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toBottomOf="@+id/carbsfield"
                android:layout_marginBottom="11dp" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:id="@+id/goalSpinner"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="80dp"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</FrameLayout>
