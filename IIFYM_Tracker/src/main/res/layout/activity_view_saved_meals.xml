<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Main.ViewSavedMealsActivity">

    <EditText
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etxtSearch"
        android:hint="Search Meals ..."
        android:drawableLeft="?android:attr/actionModeWebSearchDrawable"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.design.widget.FloatingActionButton
        android:clickable="true"
        app:srcCompat="@drawable/icon_adddailyitem"
        android:id="@+id/addmeal_fab"
        app:fabSize="mini"
        android:layout_width="75dp"
        app:elevation="10dp"
        app:rippleColor="@android:color/black"
        android:layout_height="75dp"
        app:layout_constraintRight_toRightOf="@+id/listviewSavedItems"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp" />

    <ListView
        android:layout_width="wrap_content"
        android:id="@+id/listviewSavedItems"
        android:layout_height="0dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toBottomOf="@+id/etxtSearch"></ListView>


</android.support.constraint.ConstraintLayout>