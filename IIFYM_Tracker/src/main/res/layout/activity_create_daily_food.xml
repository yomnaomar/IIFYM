<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.Main.New.activityCreateDailyFood">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/LinearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name:"
                android:id="@+id/lblName"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etxtName"
                android:selectAllOnFocus="true"
                android:textColor="@color/colorPrimary"
                android:hint="Food name"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Brand:"
                android:id="@+id/lblBrand"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etxtBrand"
                android:selectAllOnFocus="true"
                android:textColor="@color/colorPrimary"
                android:hint="Brand name"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Calories:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/lblCalories"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:inputType="number"
                android:ems="4"
                android:id="@+id/etxtCalories"

                android:textColor="?attr/colorPrimary"
                android:textAlignment="center"
                android:textSize="14sp"
                android:maxLength="4" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Carbs:"
                android:id="@+id/lblCarbs"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="3"
                android:id="@+id/etxtCarbs"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textSize="14sp"
                android:maxLength="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Protein:"
                android:id="@+id/lblProtein"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="3"
                android:id="@+id/etxtProtein"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:inputType="numberDecimal"
                android:textSize="14sp"
                android:layout_weight="1"
                android:maxLength="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fat:"
                android:id="@+id/lblFat"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="3"
                android:id="@+id/etxtFat"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView3"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:inputType="numberDecimal"
                android:textSize="14sp"
                android:layout_weight="1"
                android:maxLength="5" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <info.hoang8f.android.segmented.SegmentedGroup
                android:id="@+id/seggroupPortionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:sc_border_width="2dp"
                app:sc_corner_radius="10dp">

                <RadioButton
                    android:id="@+id/rbtnServing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/serving"
                    style="@style/RadioButton"
                    android:checked="true"
                    android:layout_gravity="center_vertical|center_horizontal" />

                <RadioButton
                    android:id="@+id/rbtnWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weight"
                    style="@style/RadioButton"
                    android:layout_gravity="center_vertical|center_horizontal" />

            </info.hoang8f.android.segmented.SegmentedGroup>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Serving #:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblServingNum"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="?attr/colorPrimaryDark" />

            <EditText
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:ems="5"
                android:id="@+id/etxtServingNum"
                android:textAlignment="center"
                android:hint="1"
                android:text="1"
                android:inputType="numberDecimal"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Amount:"
                android:id="@+id/lblAmount"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="0.06"
                android:textSize="14sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="5"
                android:id="@+id/etxtAmount"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView2"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:hint="100"
                android:text="100"
                android:enabled="true"
                android:textSize="14sp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/spinnerUnit"
                android:layout_weight="0.10"
                android:gravity="center_vertical|center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Enter"
                android:id="@+id/btnEnter"
                android:layout_weight="1"
                android:background="@drawable/btn_iifym_style" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
